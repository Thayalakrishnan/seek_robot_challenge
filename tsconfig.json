{
  "include": [
    "src/**/*.ts", 
    "tests/**/*.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node", "jest"],

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "declaration": true,

    // optional
    //"noUnusedLocals": true,
    //"noImplicitAny": false,
    //"declarationMap": true,
    //"verbatimModuleSyntax": true,
    //"isolatedModules": true,
  }
}
